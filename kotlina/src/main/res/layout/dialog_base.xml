<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgDialog">

    <androidx.cardview.widget.CardView
        style="@style/Center"
        android:layout_width="@dimen/abc_config_prefDialogWidth"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_horizontal"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/md_black_1000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Title" />

            <ScrollView
                android:id="@+id/sv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@color/thumb_color"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@id/llButtons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/flCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvMessage"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="24dp"
                        tools:text="sagehge" />
                </RelativeLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/llButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/btnPositive"
                    style="@style/Button.Dialog.Primary"
                    android:layout_marginTop="16dp"
                    tools:text="Accept" />

                <Button
                    android:id="@+id/btnNegative"
                    style="@style/Button.Dialog.Negative"
                    android:layout_marginTop="16dp"
                    tools:text="Neutral" />

                <Button
                    android:id="@+id/btnNeutral"
                    style="@style/Button.Dialog.Secondary"
                    android:layout_marginTop="16dp"
                    tools:text="Neutral" />

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/Button.Dialog.Secondary"
                    android:layout_marginTop="16dp"
                    tools:text="Cancel" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>