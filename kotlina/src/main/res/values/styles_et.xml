<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_edit_text_light</item>
        <item name="fontPath">@string/font_product_sans_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="EditText.Title">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="EditText.Description">
        <item name="android:background">@drawable/bg_et_multiline_light</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">4</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="EditText.Input">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>
    <style name="EditText.Input.Name">
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="EditText.Input.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="EditText.Input.Password">
        <item name="android:inputType">textPassword</item>
    </style>


    <style name="EditText.Number">
        <item name="android:inputType">numberSigned</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditText.NumberDecimal">
        <item name="android:inputType">numberSigned|numberDecimal</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditText.Input.Search">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:hint">@string/menu_search</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

</resources>